<br />
<div class="booyah-box col-10 offset-1">
    <h1>What I'm Learning</h1>
    <div class="text-center">
        <% current_user.enrolled_courses.each do |course| %>
            <h3><%= link_to course.title, course_path(course) %></h3>
            <br />
            <%= image_tag course.image, class: 'img-fluid' %>
            <br />
            <br />
            <div class="row">
                <div class="col-12 col-sm-6 offset-2">
                    <%= course.description %>
                </div>
                <div class="col-12 col-sm-4 text-left">
                    <%= link_to "More Info...", course_path(course), class: 'btn btn-med btn-primary' %>
                    <br />
                    <br />
                </div>
            </div>
            <hr class="col-8 offset-2">
            <br class="clr">
        <% end %>
    </div>

    <h1>What I'm Teaching</h1>
        <% current_user.courses.each do |course| %>
            <div class="text-center">
                <h3>
                    <%= link_to course.title, course_path(course) %>
                </h3>
                <br />
                <%= image_tag course.image, class: 'img-fluid' %>
            </div>
            <br />
            <div class ="row">
                <div class="col-12 col-sm-5 offset-3">
                  <%= course.description %>
                </div>
                <div class="col-12 col-sm-4">
                <%= link_to "More Info...",course_path(course), class: 'btn btn-med btn-primary' %>
                </div>
            </div>
            <hr class="col-8 offset-2">
            <br class="clr" />
        <% end%>
</div>